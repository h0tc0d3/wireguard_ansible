[Interface]
PrivateKey = {{ wireguard_private_key['content'] | b64decode | trim }}
Address = 192.168.55.1/24,{{ ansible_default_ipv6.address | regex_replace('2$', '65') }}/125
ListenPort = {{ wireguard_port }}
MTU = 1412

[Peer]
PublicKey = {{ wireguard_peer_public_key }}
PresharedKey = {{ wireguard_preshared_key['content'] | b64decode | trim }}
AllowedIPs = 192.168.55.0/24,192.168.88.0/24,{{ ansible_default_ipv6.address | regex_replace('2$', '60') }}/125
PersistentKeepalive = 20
